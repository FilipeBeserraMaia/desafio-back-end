<main class="container" style="margin-top: 58px;">
  <div class="pt-4">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div id="root" class="container">
      <%= yield %>
    </div>
  </div>
</main>